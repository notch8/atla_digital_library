<%# Override file from Hyrax 2.5.1 %>
<%# Add padding below default collection image %>
<%# by wrapping it in the .list-thumbnail class %>
<div class="col-md-2">
  <div class="list-thumbnail">
    <% cbi = CollectionBrandingInfo.where(collection_id: document.id).where(role: 'logo').first %>
    <% if cbi.present? %>
      <img alt="<%= cbi.alt_text.present? ? cbi.alt_text : cbi.local_path.gsub(/\/data\/public\/branding\/\w*\/logo\//, '') %>" src="<%= cbi.local_path.gsub(/\/data\/public/, '') %>" />
    <% else %>
      <%= render_thumbnail_tag document, {}, suppress_link: true %>
    <% end %>
  </div>
</div> 
