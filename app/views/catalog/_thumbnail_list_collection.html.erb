<%# Override file from Hyrax 2.5.1 %>
<%# Add padding below default collection image %>
<%# by wrapping it in the .list-thumbnail class %>
<div class="col-md-2">
  <div class="list-thumbnail">
    <% if collection_logo_info(document.id).present? %>
      <% collection_logo_info(document.id).each_with_index do |lr, i| %>
        <img alt="<%= (lr[:alttext].present? ? lr[:alttext] : lr[:file]) %>" src="<%= lr[:file_location] %>" />
      <% end %>
    <% else %>
      <%= render_thumbnail_tag document, {}, suppress_link: true %>
    <% end %>
  </div>
</div> 
