<div class="page-content">
  <div class="container">
    <div class="text-center">
      <h2>Change your password</h2>
    </div>
    <div class="well well-form-wrapper center-block">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <div class="form-group">
          <%= f.label :new_password, :class => "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.input :password, label: false, :class => "col-sm-9 form-control", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :confirm_your_new_password, :class => "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.input :password_confirmation, label: false, :class => "col-sm-9 form-control", required: true %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Change my password", :class => "btn btn-primary btn-lg center-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
