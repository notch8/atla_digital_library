<div class="page-content">
  <div class="container">
    <div class="text-center">
      <h2>Forgot your password?</h2>
    </div>
    <div class="well well-form-wrapper center-block">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <%= f.label :email, :class => "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.input :email, required: true, autofocus: true, :class => "form-control", label: false %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-primary btn-lg center-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
