<div class="page-content">
  <div class="container">
    <div class="text-center">
      <h2>Log in</h2>
    </div>
    <div class="well well-form-wrapper center-block">
      <p class="lead text-center">Your email and password</p>
      <%= simple_form_for(resource, as: resource_name, class: 'form-horizontal label-left', url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, :class => "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.input :email, required: false, autofocus: true, :class => "form-control", label: false %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, :class => "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.input :password, required: false, :class => "col-sm-9 form-control", label: false %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-9 col-md-offset-3">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", :class => "btn btn-primary btn-lg center-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
