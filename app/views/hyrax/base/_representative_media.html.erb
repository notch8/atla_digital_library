<!-- Override file from Hyrax 2.3.3 -->
<!-- link around image -->

<% if presenter.representative_id.present? && presenter.representative_presenter.present? %>
  <% if defined?(viewer) && viewer %>
    <%= iiif_viewer_display presenter %>
  <% elsif presenter.url.present? %>
    <%= link_to presenter.url.first, target: '_blank', rel: "nofollow" do %>
      <%= media_display presenter.representative_presenter %>
    <% end %>
  <% else %>
    <%= media_display presenter.representative_presenter %>
  <% end %>
<% else %>
  <% if presenter.audio? %>
    <%= image_tag 'audio.png', class: 'canonical-image' %>
  <% elsif presenter.video? %>
    <%= image_tag 'video.png', class: 'canonical-image' %>
  <% else %>
    <%= image_tag 'default.png', class: "canonical-image" %>
  <% end %>
<% end %>
